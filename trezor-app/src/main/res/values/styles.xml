<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- TEXTS -->

    <style name="TextStyleTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:paddingLeft">@dimen/form_hor_padding</item>
        <item name="android:paddingRight">@dimen/form_hor_padding</item>
        <item name="android:paddingTop">@dimen/form_vert_padding_big</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@string/font_medium</item>
    </style>

    <style name="TextStyleSubhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_subhead</item>
        <item name="android:paddingLeft">@dimen/form_hor_padding</item>
        <item name="android:paddingRight">@dimen/form_hor_padding</item>
        <item name="android:paddingTop">@dimen/form_vert_padding_big</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@string/font_medium</item>
    </style>

    <style name="TextStyleBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_primary2</item>
        <item name="android:textColorLink">@color/text_primary2</item>
        <item name="android:textSize">@dimen/text_body_1</item>
        <item name="android:paddingLeft">@dimen/form_hor_padding</item>
        <item name="android:paddingRight">@dimen/form_hor_padding</item>
        <item name="android:paddingTop">@dimen/form_vert_padding</item>
        <item name="android:paddingBottom">0dp</item>
    </style>


    <!-- BUTTONS -->

    <!-- pozor, je i ve values-v21/styles.xml -->
    <style name="ButtonAppTheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ButtonAppTheme.Borderless">
        <item name="android:background">@drawable/list_selector_holo_light</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">@dimen/text_body_1</item>
        <item name="android:textColor">@color/text_primary_selector</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonAppTheme.Primary" >
        <item name="android:background">@drawable/btn_card_primary</item>
        <!--<item name="backgroundTint">@color/primary_normal</item>-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minWidth">@dimen/column_width_normal</item>
        <item name="android:minHeight">@dimen/line_height_normal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="ButtonAppTheme.Secondary" >
        <item name="android:background">@drawable/btn_card_secondary</item>
        <item name="android:minWidth">@dimen/column_width_normal</item>
        <item name="android:minHeight">@dimen/line_height_normal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="ButtonAppTheme.Red" >
        <item name="android:background">@drawable/btn_card_red</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minWidth">@dimen/column_width_normal</item>
        <item name="android:minHeight">@dimen/line_height_normal</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="ButtonAppTheme.Pin" parent="@style/ButtonAppTheme.Secondary">
        <item name="android:layout_width">@dimen/btn_pin_width</item>
        <item name="android:layout_height">@dimen/btn_pin_height</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:src">@drawable/circle_pin_num</item>
    </style>


    <!-- DIVIDERS -->

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_width_thin</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="Divider.Medium">
        <item name="android:layout_height">@dimen/divider_width_medium</item>
    </style>



    <!-- NAV DRAWER -->

    <style name="NavDrawerButton" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height_normal</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">28dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/text_body_1</item>
        <item name="android:textColor">@color/nav_drawer_item_selector</item>
        <item name="android:background">@drawable/nav_drawer_item_background</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@string/font_medium</item>
    </style>

    <style name="NavDrawerButton.Secondary">
        <item name="android:layout_height">@dimen/line_height_normal</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">@dimen/text_body_1</item>
    </style>


    <!-- CUSTOM ACTION BAR -->
    <style name="CustomActionBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:id">@id/action_bar</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation" tools:ignore="NewApi">3dp</item>
        <item name="theme">@style/ActionBarToolbarTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>


    <!-- COLLAPSIBLE TOOLBAR -->

    <style name="CollapsingToolbarTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CollapsingToolbarTextAppearance.Expanded">
        <item name="android:textSize">@dimen/text_headline</item>
    </style>

</resources>
